{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "1. Serve",
			"command": "trunk",
			"args": [ "serve" ],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "2. Format",
			"command": "cargo",
			"args": [ "fmt" ],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "3. Run Tests",
			"command": "cargo",
			"args": [ "test" ],
			"problemMatcher": []
		},
		{
			"label": "4. Fix",
			"command": "cargo",
			"args": [ "fix", "--allow-staged" ],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "5. Build",
			"command": "cargo",
			"args": [ "build" ],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "6. Run Binary",
			"command": "cargo",
			"args": [ "run" ],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "7. Clean",
			"command": "cargo",
			"args": [ "clean" ],
			"group": "build",
			"problemMatcher": []
		}
	]
}